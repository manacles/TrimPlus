<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/divide_top"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/mine_bg_divide"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_mine_option"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="15dp">

        <TextView
            android:id="@+id/tv_mine_option_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="意见反馈"
            android:textColor="@color/mine_item_color"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_mine_option_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/nmf_back" />
    </RelativeLayout>

    <View
        android:id="@+id/divide_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="45dp"
        android:background="@color/mine_bg_divide"
        android:visibility="gone" />

    <View
        android:id="@+id/divide_bottom"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/mine_bg_divide"
        android:visibility="gone" />
</LinearLayout>